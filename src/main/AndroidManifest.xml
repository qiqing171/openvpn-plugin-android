<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.openvpn">

    <!-- 1. 基础权限 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络访问 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- WIFI状态 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- 前台服务（必须，确保后台运行） -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 锁屏时保持CPU唤醒 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- 开机自启（可选） -->

    <!-- 2. VPN 核心权限（必须） -->
    <uses-permission android:name="android.permission.BIND_VPN_SERVICE" /> <!-- 绑定VPN服务 -->

    <application>
        <!-- 3. OpenVPN服务声明（核心组件） -->
        <service
            android:name=".OpenVPNService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:foregroundServiceType="location|dataSync"> <!-- 前台服务类型，确保后台运行 -->

            <!-- 声明为VPN服务 -->
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <!-- 4. Uniapp插件桥接Activity（用于JS与原生交互） -->
        <activity
            android:name="io.dcloud.feature.uniapp.UniActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 5. 广播接收器（可选，用于监听系统事件） -->
        <!-- 例如：监听网络变化、锁屏/解锁事件 -->
        <receiver
            android:name=".VpnBroadcastReceiver"
            android:enabled="true"
            android:exported="true">

            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" /> <!-- 网络变化 -->
                <action android:name="android.intent.action.SCREEN_OFF" /> <!-- 锁屏 -->
                <action android:name="android.intent.action.SCREEN_ON" /> <!-- 解锁 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" /> <!-- 开机完成 -->
            </intent-filter>
        </receiver>

        <!-- 6. 通知渠道（Android 8.0+ 必须） -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="openvpn_channel" />
    </application>

</manifest>
